{
  "name": "eslint-plugin-perfectionist",
  "description": "ESLint plugin for code formatting in perfectionist style",
  "version": "0.5.0",
  "homepage": "https://eslint-plugin-perfectionist.azat.io",
  "repository": "azat-io/eslint-plugin-perfectionist",
  "author": "Azat S. <to@azat.io>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "perfectionist"
  ],
  "scripts": {
    "build": "vite build",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:changelog": "conventional-changelog -p angular --infile changelog.md --same-file",
    "release:check": "pnpm test && pnpm run build",
    "release:publish": "clean-publish",
    "release:version": "bumpp package.json --execute=\"pnpm release:changelog && git add changelog.md\" --commit \"build: publish v%s\" --tag --all",
    "lint": "eslint \"**/*.{js,ts}\"",
    "test:types": "tsc --noEmit --pretty",
    "test:unit": "vitest --run --coverage",
    "test": "pnpm run lint && pnpm run test:types && pnpm run test:unit"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./configs": {
      "require": "./dist/configs",
      "import": "./dist/configs"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "eslint": "^8.39.0"
  },
  "dependencies": {
    "@typescript-eslint/types": "^5.59.6",
    "@typescript-eslint/utils": "^5.59.6",
    "natural-compare-lite": "^1.4.0"
  },
  "devDependencies": {
    "@azat-io/eslint-config-typescript": "^0.8.0",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/node": "^20.2.1",
    "@vitest/coverage-c8": "^0.31.1",
    "bumpp": "^9.1.0",
    "clean-publish": "^4.2.0",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.41.0",
    "eslint-plugin-eslint-plugin": "^5.1.0",
    "simple-git-hooks": "^2.8.1",
    "ts-dedent": "^2.2.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vite-plugin-lightningcss": "^0.0.5",
    "vitepress": "1.0.0-alpha.76",
    "vitest": "^0.31.1",
    "vue": "^3.3.4"
  }
}
